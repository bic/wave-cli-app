<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bck_offer_item"
    android:padding="10dp" >

    <!-- TOP -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <TextView
            android:id="@+id/tvBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="by"
            android:textColor="#80000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRestaraunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZAFFERANO"
            android:textColor="#80000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Main course(big) curse0 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCourse0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tocanita de Porc"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvCourseDesc0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARTOFI PAI MACADAMI INCINS"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Course1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_first_course" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image1"
                android:orientation="vertical"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/tvCourse1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supa de fasole"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCourseDesc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BATUTA"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Course2 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_seccond_course" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image2"
                android:orientation="vertical"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/tvCourse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tramsu"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCourseDesc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOREM IPSUM"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- price -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:textColor="#f04e23"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEI"
                android:textColor="#f37a62"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>