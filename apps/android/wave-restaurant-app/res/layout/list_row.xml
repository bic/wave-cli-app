<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="43dp" >
            
        <ImageButton
            android:id="@+id/edit_config_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="visible" />
        
		<ImageButton
            android:id="@+id/save_config_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_menu_save" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/courseName"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="@android:string/unknownName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="visible" />

             <EditText
                android:id="@+id/edit_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/unknownName"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textMultiLine"
                 android:ems="10"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/first_number_picker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/maximum_courses_to_include"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" 
                 android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/button_onoff_indicator_on" />

        </LinearLayout>
        

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/second_number_picker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/min_included_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" 
                 android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/button_onoff_indicator_on" />

        </LinearLayout>
        

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/third_number_picker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/discounting_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" 
                 android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/button_onoff_indicator_on" />

        </LinearLayout>
        

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

</LinearLayout>
