<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/apk/lib/com.maivic.android.widgets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="43dp" >
            
        <ImageButton
            android:id="@+id/edit_config_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="visible" />
        
		<ImageButton
            android:id="@+id/save_config_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_menu_save" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/courseName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@android:string/unknownName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="visible" />

             <EditText
                android:id="@+id/edit_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/unknownName"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textMultiLine"
                 android:ems="7"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            
        </RelativeLayout>

    </LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.33" >

        <TextView
            android:id="@+id/first_number_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="center_horizontal"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

       <com.maivic.android.widget.NumberPicker
           android:id="@+id/npOptionLeft"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           apps:checkbox_on_zero="true"
            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/second_number_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="center_horizontal"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

      <com.maivic.android.widget.NumberPicker
          android:id="@+id/npOptionMiddle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
           />

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.33" >

        <TextView
            android:id="@+id/third_number_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@android:string/unknownName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:first_row_only="true" />

 	 <com.maivic.android.widget.NumberPicker
 	     android:id="@+id/npOptionRight"
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"
 	     android:layout_gravity="center_vertical"
 	      />

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

</LinearLayout>
