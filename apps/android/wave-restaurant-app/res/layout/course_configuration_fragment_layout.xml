
 
 
 
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:paddingLeft="8dp"
         android:paddingRight="8dp">

	<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    
		    android:orientation="horizontal" >

        <TextView
            android:id="@+id/proposal_configuration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:scaleType="fitCenter"
            android:text="Configurarea propunerii"
            android:textSize="32sp" />

        <ImageButton
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/proposal_configuration_title"
            
            android:src="@android:drawable/ic_menu_help"
             />
        <View
            android:id="@+id/sepline1"
	        android:layout_width="fill_parent"
	        android:layout_height="2dip"
	        android:background="#000000"
	        android:layout_below="@id/imageView1"
	         />
        
        </RelativeLayout>
     <com.maivic.restaurant.HeightChangingListView android:id="@id/android:list"
         	   
               android:layout_width="match_parent"
               android:layout_height="match_parent"
            	
               android:drawSelectorOnTop="false"/>

    
 </LinearLayout>
