<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NumberPicker">
        <attr name="group_size" format="integer" />
        <attr name="group_inline_split" format="integer" />
        <attr name="steps" format="string" />
        <attr name="buttonlabels" format="string" />
        <attr name="label" format="string" />
        <attr name="label_plural" format="string" />
        <attr name="align" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="inline_style" format="boolean" />
        <attr name="checkbox_on_zero" format="boolean" />
        <attr name="checkbox_first_value" format="float" />
        <attr name="force_accept_zero" format="boolean" />
        
        <attr name="value" format="float" />
        <attr name="min" format="float" />
        <attr name="max" format="float" />
        <attr name="reference" format="float"/>
    </declare-styleable>

</resources>